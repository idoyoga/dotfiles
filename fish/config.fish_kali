alias n='flatpak run io.neovim.nvim'
alias v='vim .'
alias francinette="$HOME"/francinette-image/run.sh
alias paco="$HOME"/francinette-image/run.sh

function fish_prompt
    # Set color variables
    set user_color green
    set host_color cyan
    set cwd_color blue
    set branch_color yellow
    set reset_color normal
    
    # Display user@hostname
    set_color $user_color
    echo -n (whoami)
    set_color $reset_color
    echo -n '@'
    set_color $host_color
    echo -n (hostname)
    
    # Display the current working directory
    set_color $cwd_color
    echo -n ' ' (prompt_pwd)
    
    # Display the git branch if in a git repository
    if test -d .git
        echo -n ' ('
        set_color $branch_color
        echo -n (git symbolic-ref --short HEAD 2> /dev/null)
        set_color $cwd_color
        echo -n ')'
    end
    
    # Reset color and display the prompt symbol
    set_color $reset_color
    echo -n ' $ '
end

